{
  "name": "base-cypress-cucumber-typescript",
  "version": "1.0.0",
  "description": "BDD, Cypress + Cucumber + Typescript",
  "main": "",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "pretest": "rm -rf cypress/cucumber-json cypress/screenshots cypress/videos",
    "test": "cypress run",
    "tag:smoke": "cypress run --env tags='@smoke'",
    "bundled:all": "cypress run --spec **/*.features",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "lint": "npm run lint:eslint; npm run lint:tsc",
    "lint:fix": "npm run lint:eslint -- --fix"
  },
  "keywords": [
    "BDD",
    "cucumber",
    "cypress",
    "qa",
    "testing",
    "typescript"
  ],
  "author": {
    "name": "Erik Ccanto",
    "email": "ccanto.erik@gmail.com",
    "url": "https://github.com/eccanto"
  },
  "license": "MIT",
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^15.1.5",
    "@cypress/webpack-preprocessor": "^5.17.0",
    "cypress": "^12.8.1",
    "webpack": "^5.76.3",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "@types/node": "^18.15.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsonc": "^2.7.0",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": [
      "cypress/e2e/steps/**/*.ts"
    ],
    "html": {
      "enabled": true
    }
  }
}
